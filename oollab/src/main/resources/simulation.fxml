        <VBox alignment="CENTER">
            <Label fx:id="moveDescriptionLabel" text="Move description" textAlignment="CENTER"/>
            <GridPane fx:id="grid" gridLinesVisible="true" alignment="CENTER" style="-fx-font-size: 16px"/>
