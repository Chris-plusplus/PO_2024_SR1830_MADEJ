            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
        <VBox>
            <TextField fx:id="inputField" text="f b r l f f r r f f f f f f f f"/>
            <Button fx:id="startButton" text="Start" onAction="#onStartButtonClicked"/>
